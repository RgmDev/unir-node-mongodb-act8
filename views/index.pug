extends layout

block content
    div(class='jumbotron bg-light p-5')
        h1(class='display-3') #{title}
        p(class='lead') Manage estate data
        hr(class='my-4')
        p(class='lead')
            a(class='btn btn-primary btn-lg', href='https://github.com/RgmDev/unir-node-mongodb-act8', role='button', target='_blank') GitHub

    div(class='mt-5')
        h2(class='display-4') Endpoint list
        h3 Estates
        ul 
            li GET /api/estate
            li POST /api/estate
            li PUT /api/estate/:estateId
            li DELETE /api/estate/:estateId